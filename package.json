{
  "name": "sih-semantic-release-config",
  "version": "1.5.1",
  "description": "Plugin/Config for SIH flavoured semantic release",
  "main": "release.config.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once --pro"
  },
  "author": "Julius Zeidler <julius.zeidler@starfinanz.de>",
  "license": "MIT",
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      "@semantic-release/git"
    ],
    "publish": [
      {
        "path": "@semantic-release/github"
      }
    ]
  },
  "dependencies": {
    "@semantic-release/changelog": "2.x",
    "@semantic-release/git": "4.x",
    "@semantic-release/github": "^4.2.3",
    "@semantic-release/npm": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "semantic-release": "15.x",
    "travis-deploy-once": "^4.3.4"
  },
  "repository": {
    "type": "git",
    "url": "github:sparkassen-hub/sih-semantic-release-config.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
